<div class="flex flex-col w-full gap-1">
  <label class="font-medium"><%- label %></label>

  <input
    class="
      w-full h-10
      p-2 px-3
      rounded
      bg-slate-50
      shadow
      border-slate-200
      border-[1px]
      focus:border-slate-300
      focus:bg-white
      focus:shadow-sm
      focus:outline-none
      outline-none
      transition-all
    "
    <% for (const arg in args) { %>
      <%- arg %>="<%- args[arg] %>"
    <% } %>
  />
</div>